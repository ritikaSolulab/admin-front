<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/style.ejs') %>
        <script>
            function redirectToIndex() {
                window.location.href = "resend-OTP";
            }
            function redirectToSendOTP() {
                window.location.href = "send-OTP";
            }
            function redirectToDashboard() {
                window.location.href = "admin/dashboard";
            }

        </script>
</head>

<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <div
            class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0" style="background-color: white;">
                            <div class="card-body">
                                <a href="index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="../assets/images/logos/dark-logo.svg" width="180" alt="">
                                </a>
                                <p class="text-center">Good to see you again</p>
                                <form>
                                    <div class="mb-3">
                                        <h2 class="text-center">Please enter 2FA code</h2>
                                        <p class="text-center">Two-factor authentication(2FA) is enabled for your
                                            account.</p>
                                        <p class="text-center">An otp has been sent to your registered mail id.</p>
                                    </div>
                                    <div class="mb-3">
                                        <input type="otp" class="form-control" id="exampleInputEmail1"
                                            placeholder="please enter otp to login" aria-describedby="emailHelp">
                                    </div>
                                    <a onclick="redirectToDashboard()"
                                        class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">verify</a>

                                    <div class="d-flex align-items-center justify-content-center">
                                        <a class="text-primary fw-bold" onclick="redirectToIndex()">Resend OTP?</a>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/libs/jquery/dist/jquery.min.js"></script>
    <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sidebarmenu.js"></script>
    <script src="/js/app.min.js"></script>
    <script src="/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="./libs/simplebar/dist/simplebar.js"></script>
    <script src="/js/dashboard.js"></script>
