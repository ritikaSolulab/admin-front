<!DOCTYPE html>
<html>

<head>
    <%- include('./partials/style.ejs') %>
        <script>
            function redirectToLogin() {
                window.location.href = "login";
            }
            function redirectToPasswordChanged() {
                window.location.href = "password-changed";
            }
        </script>
</head>

<body>

    <div class="login-wrapper-cst">


        <div class="login-box">


            <div class="text-center bg-white">
                <!-- <span class="login-logo"> <img src="/images/profile/user-1.jpg" width="100%"></span> -->
            </div>
            <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6"
                data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
                <div
                    class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
                    <div class="d-flex align-items-center justify-content-center w-100">
                        <div class="row justify-content-center w-100">
                            <div class="col-md-8 col-lg-6 col-xxl-3">
                                <div class="card mb-0">
                                    <div class="card-body">
                                        <a href="index.ejs" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                            <img src="../assets/images/logos/dark-logo.svg" width="180" alt="">
                                        </a>
                                        <p class="text-center">Good to see you again</p>
                                        <form>
                                            <div class="mb-3">
                                                <label for="exampleInputEmail1" class="form-label">EmailId</label>
                                                <input type="email" class="form-control" id="exampleInputEmail1"
                                                    aria-describedby="emailHelp" placeholder="e.g.john@gmail.com">
                                            </div>
                                            <div class="mb-4">
                                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                                <input type="password" class="form-control" id="exampleInputPassword1"
                                                    placeholder="e.g.iloveatomicpeople123">
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mb-4">
                                            </div>
                                            <a class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2"
                                                onclick="redirectToLogin()">Log In</a>

                                            <div class="d-flex align-items-center justify-content-center">
                                                <a href="/forgot-password" class="text-primary fw-bold">Forgot
                                                    Password ?</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <div
            class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <a href="/new-password" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                    <img src="../assets/images/logos/dark-logo.svg" width="180" alt="">
                                </a>
                                <p class="text-center">Good to see you again</p>
                                <form>
                                    <div class="mb-3">
                                        <h3 class="text-center">New Password</h3>
                                        <p class="text-center">Please create a new password that you don't use on any
                                            other site</p>
                                        <!-- <label for="exampleInputEmail1" class="form-label">Username</label> -->
                                        <input type="password" class="form-control" id="exampleInputPassword1"
                                            aria-describedby="passwordHelp" placeholder="Create new password">
                                    </div>
                                    <div class="mb-4">
                                        <!-- <label for="exampleInputPassword1" class="form-label">Password</label> -->
                                        <input type="password" class="form-control" id="exampleInputPassword1"
                                            aria-describedby="passwordHelp" placeholder="Confirm new password">
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <a onclick="redirectToPasswordChanged()" class="text-primary fw-bold">Change</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Mainly scripts -->
    <script src="/libs/jquery/dist/jquery.min.js"></script>
    <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sidebarmenu.js"></script>
    <script src="/js/app.min.js"></script>
    <script src="/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="./libs/simplebar/dist/simplebar.js"></script>
    <script src="/js/dashboard.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

</body>

</html>