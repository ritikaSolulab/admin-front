<!DOCTYPE html>
<html>

<head>

    <%- include('../partials/style.ejs') %>
</head>

<body>
    <div id="wrapper">
        <%- include('../partials/menu.ejs') %>
        <!-- side bar end -->
        <div id="page-wrapper" class="gray-bg">
            <!-- top nav start -->
            <%- include('../partials/header.ejs') %>


            <!-- top nav end -->
            <div class="wrapper wrapper-content profile-page">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Promocode Management</h5>

                    </div>
                    <div class="ibox-content ">
                        <div class="table-tab">
                            <ul class="nav nav-pills mb-4 " id="pills-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="del-tab" data-toggle="pill" href="#promo" role="tab"
                                        aria-controls="pills-home" aria-selected="true">
                                        promocode Management
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="recent-tab" data-toggle="pill" href="#pend" role="tab"
                                        aria-controls="pills-home" aria-selected="true">
                                        Referral Management
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="promo" role="tabpanel"
                                    aria-labelledby="del-tab">
                                    <div class="text-right mb-3">
                                        <button class="btn btn-primary" data-toggle="modal"
                                            data-target="#createPromocode">Create New promocode</button>
                                    </div>
                                    <div class="border p-3">
                                        <form id="searchPromocodeForm">
                                            <p style="font-size: 18px;"><b>Search Filter</b></p>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label class="col-form-label">Benefits</label>
                                                    <select class="form-control" id="benefitsSearch">
                                                        <option value="">Select Benefits</option>
                                                        <option value="discount_on_plan">Discount on plan</option>
                                                        <option value="free_trial_plan">Free trial plan</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="col-form-label">Discount</label>
                                                    <div class="row">
                                                        <div class="col-md-7 pr-md-0 pr-sm-3">
                                                            <select class="form-control d-inline-block" id="discountOperation">
                                                                <option value="">Select Operation</option>
                                                                <option value=">">Greater</option>
                                                                <option value="<">Less</option>
                                                                <option value=">=">Greater Than Equal to</option>
                                                                <option value="<=">Less Than Equal to</option>
                                                            
                                                            </select>
                                                        </div>
                                                        <div class="col-md-5 pl-md-1 pl-sm-3 mt-sm-2 mt-md-0">
                                                            <input class="form-control d-inline-block"
                                                                placeholder="Enter Discount" id="discountValue"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="col-form-label">Subscription Plan</label>
                                                    <select class="form-control" id="searchPlan">
                                                        <option value="" >Select Subscription Plan</option>
                                                     </select>
                                                </div>
                                                <div class="col-md-6">
                                                    <!-- date-period start -->
                                                    <div class="daterange-wrapper" style="margin-top:30px;">
                                                        <div class="date-cst d-inline-block	">
                                                            <input type="text" placeholder="MM/DD/YYYY"
                                                                class="form-control " name="promocode_dateFilter" id="searchDate" readonly='true'/>
                                                        </div>
                                                    </div>
                                                    <!-- date-period end -->
                                                </div>
                                                <div class="col-lg-12 mt-3">
                                                    <button type="button" class="btn btn-primary" onclick="resetSearch()">Clear</button>
                                                    <button type="button" class="btn btn-primary" onclick="searchPromocode()">Search</button>
                                                </div>
                                            </div>
                                            <!-- row end -->
                                        </form>
                                    </div>
                                    <!-- border-end							 -->
                                    <div class="table-responsive mt-5">
                                        <table class="table table-striped table-bordered table-hover "
                                            style="width:100%" id="promocodeListTable">
                                            <thead>
                                                <tr>
                                                    <th>No</th>
                                                    <th>Email</th>
                                                    <th>All Providers</th>
                                                    <th>Promo Name</th>
                                                    <th>Benefit</th>
                                                    <th>Expiry Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane " id="pend" role="tabpanel" aria-labelledby="pills-home-tab">
                                    <div class="text-right">
                                        <!-- date-period start -->
                                        <div class="daterange-wrapper">
                                            <div class="date-cst d-inline-block	">
                                                <input type="text" placeholder="MM/DD/YYYY" class="form-control "
                                                    name="referralFilter" id="referralFilter" readonly='true'/>
                                            </div>
                                        </div>
                                        <!-- date-period end -->
                                    </div>
                                    <div class="row">

                                        <div class="col-md-4">
                                            <div class="text-center">
                                                <h3>Referral Settings</h3>
                                            </div>
                                            <form id="saveReferralsSettings" name="saveReferralsSettings">
                                                <div class="form-group">
                                                    <label class="col-form-label">Benefit For</label>
                                                    <select class="form-control" id="benefitFor" name="benefitFor">
                                                        <option value="">Please select Benefit For</option>
                                                        <option value="referred_tor_benefit">Invited By</option>
                                                        <option value="invited_tor_benefit">Referred Tor</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-form-label">Benefits</label>
                                                    <select class="form-control" id="benefitReferral" name="benefitReferral">
                                                        <option value="">Select Benefits</option>
                                                        <option value="discount">Discount</option>
                                                        <option value="free_tire">Free Trial Plan</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-form-label">Plans</label>
                                                    <select class="form-control" id="benefitPlan" name="benefitPlan">
                                                        <option value="">Select Subscription Plans</option>
                                                    </select>
                                                </div>
                                                <div class="form-group" id="discountBox" style="display: none;">
                                                    <label class="col-form-label">Discount</label>
                                                    <input class="form-control" type="text"
                                                        placeholder="Enter discount" id="discountReferral" name="discountReferral"/>
                                                </div>
                                                <div class="form-group" id="daysRequiredBox" style="display: none;">
                                                    <label class="col-form-label">Days </label>
                                                    <input class="form-control" type="number" id="daysRequired" name="daysRequired"
                                                        placeholder="Enter Days"   />
                                                </div>
                                                <div class="form-group" id="referRequiredBox" style="display: none;">
                                                    <label class="col-form-label">Refer Required</label>
                                                    <input class="form-control" type="number" id="referRequired" name="referRequired"
                                                        placeholder="Enter Refer"   />
                                                </div>
                                                
                                                <div class="text-center mt-3">
                                                    <button type="button" class="btn btn-primary btn-block" onclick="saveReferenceSettings()">
                                                        Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="col-md-8">
                                            <div id="refer-chart"
                                                style="width: 100%; height: 350px; background-color: #FFFFFF;"></div>

                                        </div>
                                    </div>
                                    <!-- row end -->
                                    <!-- row start -->
                                    <div class="row align-items-center mb-4 payment-content">
                                        <div class="col-md-6 col-lg-3">
                                            <div class="widget white-bg  text-center ">
                                                <div class="">
                                                    <h1 class="m-xs font-bold" id="totalReferralCount">40</h1>
                                                    <h5 class=" no-margins">
                                                        Total Referrals
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-3">
                                            <div class="widget white-bg  text-center ">
                                                <div class="">
                                                    <h1 class="m-xs font-bold" id="totalPromocodeCount">7</h1>
                                                    <h5 class=" no-margins">
                                                        Promo Distributed
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-3">
                                            <div class="widget white-bg  text-center ">
                                                <div class="">
                                                    <h1 class="m-xs font-bold text-green" id="changeInReferral">2.4%</h1>
                                                    <h5 class=" no-margins">
                                                        Change in refers %
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-lg-3">
                                            <div class="widget white-bg  text-center ">
                                                <div class="">
                                                    <h1 class="m-xs font-bold " id="lastPromocodeTime">5 hrs ago</h1>
                                                    <h5 class=" no-margins">
                                                        Last Referred
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- row end -->
                                </div>
                            </div>
                        </div>
                        <!-- tab end -->
                    </div>
                    <!-- ibox-content end -->
                </div>
                <!-- ibox end-->
            </div>
            <!-- wrapper end -->
            <%- include('../partials/footer.ejs') %>

            <!-- footer end -->
        </div>
        <!-- #page-wrapper end -->
    </div>


    <div class="modal fade" id="createPromocode" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered createPromocode" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" onclick="resetForm('createPromocodeForm')" class="close modal-close-btn"
                        data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="title">Create Promocode</h3>
                    <form id="createPromocodeForm">
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Provider </label>
                            </div>
                            <div class="col-sm-6    ">
                                <select id="providerList" name="providerList" class="form-control">
                                    <option value="">Select Provider</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">All Provider </label>
                            </div>
                            <div class="col-sm-6    ">
                                <input type="checkbox" id="forAllProvider">
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Promocode Name</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="promocodeName" name="promocodeName"
                                    placeholder="Enter Promocode Name">
                            </div>
                        </div>
                        
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Description</label>
                            </div>
                            <div class="col-sm-6    ">
                                <textarea rows="5" class="form-control" id="description" name="description"> </textarea>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Usage limit per user</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="number" max=99 class="form-control" id="userLimit" name="userLimit">
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Benefit</label>
                            </div>
                            <div class="col-sm-6">
                                <div class="check-wrapper" id="benefitDiv">
                                    <label> <input type="radio" name="benefit" id="discount"
                                            value="discount_on_plan">Discount on plan
                                    </label><br />
                                    <label> <input type="radio" name="benefit" id="free_tire"
                                            value="free_trial_plan">Free trail plan</label>
                                </div>
                                <br>


                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap" id="discount_on_plan">
                            <div class="col-sm-6">
                                <label class="col-form-label">Discount Percentage</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="number" max=100 placeholder="Enter Discount Amount" class="form-control"
                                    id="discountPercentage" name="discountPercentage">

                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap" id="free_trial_plan">
                            <div class="col-sm-6">
                                <label class="col-form-label">validity</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="number" placeholder="Enter validity" class="form-control" id="validity"
                                    name="validity">

                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Plans</label>
                            </div>
                            <div class="col-sm-6">
                                <select class="form-control" id="subscriptionPlan" name="subscriptionPlan">
                                    <option value="">Please Select Plans</option>
                              
                                </select>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">All Plans </label>
                            </div>
                            <div class="col-sm-6    ">
                                <input type="checkbox" id="forAllPlans">
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Expiry</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control datepicker" placeholder="MM/DD/YYYY"
                                    name="expiryTime" id="expiryTime" readonly='true'>

                            </div>
                        </div>
                        <div class="row justify-content-center mt-4">
                            <div class="col-sm-3 col-6">
                                <input class="btn btn-primary btn-block" type="button" aria-label="Create"
                                    value="Create" onclick="cratePromocode()">
                            </div>
                            <div class="col-sm-3 col-6">
                                <input class="btn btn-white btn-block" type="button"
                                    onclick="resetForm('createPromocodeForm')" value="clear">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editPromocode" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered editPromocode" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" onclick="resetForm('editPromocodeForm')" class="close modal-close-btn"
                        data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="title">Edit Promocode Details</h3>
                    <form id="editPromocodeForm">
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Provider </label>
                            </div>
                            <div class="col-sm-6    ">
                                <select  id="providerList_update" name="providerList_update" class="form-control" disabled>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">All Provider </label>
                            </div>
                            <div class="col-sm-6    ">
                                <input type="checkbox" id="edit_forAllProvider">
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Promocode Name</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label" id="edit_promocodeName"></label>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Description</label>
                            </div>
                            <div class="col-sm-6    ">
                                <textarea rows="5" class="form-control" id="edit_description"
                                    name="description"> </textarea>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Usage limit per user</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="number" max=99 class="form-control" id="edit_userLimit" name="userLimit">
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Benefit</label>
                            </div>
                            <div class="col-sm-6">
                                <div class="check-wrapper">
                                    <label class="col-form-label" id="edit_benefit"></label>
                                </div>
                                <br>


                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap" id="edit_discount_on_plan">
                            <div class="col-sm-6">
                                <label class="col-form-label">Discount Percentage</label>
                            </div>
                            <div class="col-sm-6">

                                <label class="col-form-label" id="edit_discountPercentage"></label>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap" id="edit_free_trial_plan">
                            <div class="col-sm-6">
                                <label class="col-form-label">validity</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label" id="edit_validity"></label>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Plans</label>
                            </div>
                            <div class="col-sm-6">
                                <label class="col-form-label" id="edit_plans"></label>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">All Plans </label>
                            </div>
                            <div class="col-sm-6    ">
                                <input type="checkbox" id="edit_forAllPlans">
                            </div>
                        </div>
                        <div class="form-group row justify-content-center otp-wrap">
                            <div class="col-sm-6">
                                <label class="col-form-label">Expiry</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control datepicker" placeholder="MM/DD/YYYY"
                                    name="expiryTime" id="edit_expiryTime" readonly='true'>

                            </div>
                        </div>
                        <div class="row justify-content-center mt-4">
                            <div class="col-sm-3 col-6">
                                <input class="btn btn-primary btn-block" type="button" aria-label="Create"
                                    value="Update" onclick="editPromocode()">
                            </div>
                            <div class="col-sm-3 col-6">
                                <input class="btn btn-white btn-block" type="button"
                                    onclick="resetForm('editPromocodeForm')" value="clear">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- #main wrapper end -->
    <!-- Mainly scripts -->

    <%- include('../partials/script.ejs') %>
    <script src="/js/chart/amcharts.js"></script>
    <script src="/js/chart/pie.js"></script>
    <script src="/js/chart/piechart.js"></script>
    <script src="/js/chart/serial.js"></script>
    <script src="/js/chart/serial-chart.js"></script>
    <script src="/js/custom/promocode_managemenet.js"></script>

</body>

</html>