        <script>
			function toggleForm(formType) {
			  const termsOfService = document.getElementById('transactionTable');
			  const privacyPolicy = document.getElementById('privacyTable');
              const aboutUs = document.getElementById('aboutUs');
			  
			  if (formType === 'termsOfService') {
				termsOfService.classList.remove('invisible')
				termsOfService.classList.add('visible');
				privacyPolicy.classList.add('invisible');
                aboutUs.classList.add('invisible')
			  } else if(formType === 'privacyPolicy'){
                privacyPolicy.classList.remove('invisible')
				termsOfService.classList.add('invisible');
                aboutUs.classList.add('invisible')
				privacyPolicy.classList.add('visible');
			  }
              else {
                aboutUs.classList.remove('invisible')
				termsOfService.classList.add('invisible');
				privacyPolicy.classList.add('invisible');
                aboutUs.classList.add('visible');
			  }

			}
		  </script>
		  <style>.visible {display: flexbox; width: 100%;} 
		  	.invisible {display: none;}
		</style>
</head>

