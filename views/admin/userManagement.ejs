<!DOCTYPE html>
<html>

<head>

	<%- include('../partials/style.ejs') %>
		<title>Super Admin Control</title>
		<link rel="shortcut icon" type="image/png" href="../images/logos/favicon.png" />
		<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
		<script>
			function toggleForm(formType) {
				const userManagement = document.getElementById('transactionTable');
				const roleManagement = document.getElementById('roleManagement');

				if (formType === 'userManagement') {
					userManagement.classList.remove('invisible')
					userManagement.classList.add('visible');
					roleManagement.classList.add('invisible');
				} else {
					userManagement.classList.add('invisible');
					roleManagement.classList.add('visible');
				}
			}
		</script>
		<style>
			.visible {
				display: flexbox;
				width: 100%;
			}

			.invisible {
				display: none;
			}
		</style>
</head>

<body>
	<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
		data-sidebar-position="fixed" data-header-position="fixed">
		<%- include('../partials/menu.ejs') %>
			<!-- side bar end -->
			<div class="body-wrapper">
				<!-- top nav start -->
				<%- include('../partials/navbar.ejs') %>
					<!-- top nav end -->
					<div class="container-fluid card">
						<!--  Row 1 -->
						<div class="card-body">
							<div class="row">

								<nav>
									<div class="nav nav-tabs" id="nav-tab" role="tablist">
										<button class="nav-link active" id="nav-user-tab" data-bs-toggle="tab"
											data-bs-target="#nav-user" type="button" role="tab" aria-controls="nav-home"
											aria-selected="true">User Management</button>
										<button class="nav-link" id="nav-role-tab" data-bs-toggle="tab"
											data-bs-target="#nav-role" type="button" role="tab"
											aria-controls="nav-profile" aria-selected="false">Role Management</button>
									</div>
								</nav>
								<hr>
								<div class="tab-content" id="nav-tabContent">
									<div class="tab-pane fade show active" id="nav-user" role="tabpanel"
										aria-labelledby="nav-user-tab">
										<div class="container-fluid">
											<button type="button" class="btn btn-primary m-1">Create User</button>
										</div>
										<div class="row p-4">
											<table class="table table-striped table-bordered table-hover visible"
												id="userTable">
												<thead>
													<tr>
														<th>Sr No</th>
														<th>Name</th>
														<th>Email address</th>
														<th>Created By</th>
														<th>Role</th>
														<th>Action</th>
													</tr>
												</thead>
												<tbody>
												</tbody>
											</table>
										</div>
									</div>

									<div class="tab-pane fade" id="nav-role" role="tabpanel"
										aria-labelledby="nav-role-tab">
										<div class="d-flex justify-content-start">
											<button type="button" class="btn btn-primary m-1">Create Role</button>
										</div>
										<div class="row">
											<table class="table table-striped table-bordered table-hover visible"
												id="roleTable" style="width: 100%;">
												<thead>
													<tr>
														<th>Sr No</th>
														<th>Role name</th>
														<th>Created By</th>
														<th>Total Users</th>
														<th>Action</th>
													</tr>
												</thead>
												<tbody>
												</tbody>
											</table>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
			</div>
	</div>
	<!-- #main wrapper end -->
	<!-- Mainly scripts -->
	<%- include('../partials/script') %>
		<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
		<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

		<script src="/js/userManagement.js"></script>

		<style>
			.table-responsive {
				overflow-x: hidden;

			}

			@media (max-width: 1000px) {
				.table-responsive {
					overflow-x: auto;
					-webkit-overflow-scrolling: touch;
				}
			}


			.dataTables_wrapper .dataTables_filter {
				float: right;
				text-align: center;
			}

			.pagination {
				float: right;
			}
		</style>
</body>

</html>