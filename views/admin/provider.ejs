<!DOCTYPE html>
<html>

<head>

    <%- include('../partials/style.ejs') %>
</head>

<body>
    <div id="wrapper">
        <%- include('../partials/menu.ejs') %>
        <!-- side bar end -->
        <div id="page-wrapper" class="gray-bg">
           <!-- top nav start -->
           <%- include('../partials/header.ejs') %>
        <!-- top nav end -->
            <div class="wrapper wrapper-content profile-page">
                <div class="ibox">
                    <div class="ibox-title">
						<h5><%= providerName %> Management</h5>
						<div class="ibox-tools">
							<!-- date-period start -->
							<div class="daterange-wrapper">						
								<div class="date-cst d-inline-block	">
									<input type="text" placeholder="DD/MM/YYYY" class="form-control " name="daterange" id="dateFilter" onchange="dateFilter(this.value)" readonly='true' />
								</div>								
							</div>                    
							<!-- date-period end --> 
						</div>
                    </div>
                    <div class="ibox-content ">  
                        <div class="table-tab">
							<ul class="nav nav-pills mb-4 " id="pills-tab" role="tablist">
								<li class="nav-item">
									<a class="nav-link active" id="del-tab" data-toggle="pill" href="#pro" role="tab" aria-controls="pills-home" aria-selected="true">
										<%= providerName %> details
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" id="recent-tab" data-toggle="pill" href="#pend" role="tab" aria-controls="pills-home" aria-selected="true">
										Pending approvals
									</a>
								</li>
							</ul>
							<div class="tab-content" id="pills-tabContent">
								<div class="tab-pane fade show active" id="pro" role="tabpanel" aria-labelledby="del-tab">
									<div class="table-responsive">
										
										<table class="table table-striped table-bordered table-hover " style="width:100%" id="providersTable">
												<thead>
												<tr>
													<th><%= providerName %> Name</th>
													<th>Date of registration</th>
													<th>Organization name</th>
													<th>Status</th>
													<th>plans</th>
													<th>Action</th>
												</tr>
											</thead>
											<tbody>												
										
											</tbody>
										</table>
									</div>
									
								</div>
								<div class="tab-pane " id="pend" role="tabpanel" aria-labelledby="pills-home-tab">
									<div class="table-responsive">
										<table class="table table-striped table-bordered table-hover " style="width:100%" id="providersApprovalTable">
											<thead>
												<tr>
													<th>DNUS number</th>
													<th><%= providerName %> Name</th>
													<th>Date of registration</th>
													<th>Organization name</th>
													<th>Action</th>
												</tr>
											</thead>
											<tbody>																					
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
						<!-- tab end -->
					</div>
					<!-- ibox-content end -->
				</div>  
				<!-- ibox end-->
            </div>
            <!-- wrapper end -->
            <%- include('../partials/footer.ejs') %>
            <!-- footer end -->
        </div>
        <!-- #page-wrapper end -->
    </div>
    <!-- #main wrapper end -->
    <!-- Mainly scripts -->
    <%- include('../partials/script.ejs') %>
	<script src="/js/custom/provider.js"></script>
</body>
</html>
